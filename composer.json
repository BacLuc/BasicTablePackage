{
  "require": {
    "wikimedia/composer-merge-plugin": "~1.3",
    "concrete5/dependency-patches": "^1.5.0",
    "portphp/csv": "1.1.*",
    "portphp/excel": "1.1.*",
    "php-di/php-di": "6.*",
    "tightenco/collect": "6.0.*",
    "php-ds/php-ds": "1.2.*",
    "doctrine/dbal": "~2.5",
    "doctrine/lexer": "1.0.*",
    "symfony/inflector": "4.4.*"
  },
  "autoload": {
    "psr-4": {
      "BaclucC5Crud\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BaclucC5Crud\\Test\\": "tests"
    },
    "files": [
      "src/Lib/CollectionHelper.php"
    ]
  },
  "config": {
    "process-timeout": 0,
    "vendor-dir": "../../concrete/vendor"
  },
  "extra": {
    "r1": "This is using the wikimedia plugin to merge our core/composer.json file.",
    "r2": "By doing this, we greatly simplify the requirements for setting up a subtree split",
    "merge-plugin": {
      "include": [
        "../../concrete/composer.json"
      ],
      "recurse": false,
      "replace": false,
      "merge-extra": false
    },
    "allow-subpatches": [
      "concrete5/dependency-patches"
    ]
  },
  "require-dev" : {
    "php": ">=7",
    "phpunit/phpunit": "^7.5.9"
  }
}
